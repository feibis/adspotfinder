generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  engineType      = "client"
  output          = "../.generated/prisma"
}

datasource db {
  provider = "postgresql"
  extensions = [citext]
}

enum AdType {
  Banner
  Tools
  ToolPage
  BlogPost
  Bottom
  All
}

enum ToolStatus {
  Draft
  Scheduled
  Pending
  Published
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          String    @default("user")
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts Account[]
  sessions Session[]
  tools    Tool[]

  // Indexes
  @@index([id])
}

model Session {
  id             String   @id @default(cuid())
  token          String   @unique
  expiresAt      DateTime
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  // Indexes
  @@index([userId])
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  // Indexes
  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Ad {
  id          String   @id @default(cuid())
  email       String
  name        String
  description String?
  websiteUrl  String
  faviconUrl  String?
  bannerUrl   String?
  buttonLabel String?
  type        AdType   @default(All)
  startsAt    DateTime
  endsAt      DateTime
  sessionId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tool {
  id             String     @id @default(cuid())
  name           String     @db.Citext
  slug           String     @unique
  websiteUrl     String
  affiliateUrl   String?
  tagline        String?
  description    String?
  content        String?
  faviconUrl     String?
  screenshotUrl  String?
  isFeatured     Boolean    @default(false)
  submitterName  String?
  submitterEmail String?
  submitterNote  String?
  status         ToolStatus @default(Draft)
  publishedAt    DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  // Relations
  categories Category[]
  tags       Tag[]
  locations  Location[]
  attributes Attribute[]
  pricings   Pricing[]
  reports    Report[]
  owner      User?      @relation(fields: [ownerId], references: [id])
  ownerId    String?

  @@index([id, slug])
  @@index([name])
  @@index([status])
  @@index([ownerId])
  @@index([createdAt])
}

model Category {
  id          String   @id @default(cuid())
  name        String   @db.Citext
  slug        String   @unique
  label       String?
  description String?
  type        String   @default("tool") // "tool" | "shop"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tools Tool[]
  shops Shop[]

  // Indexes
  @@index([slug])
  @@index([type])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @db.Citext
  slug      String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  // Relations
  tools Tool[]

  // Indexes
  @@index([name])
}

model Shop {
  id          String   @id @default(cuid())
  name        String   @db.Citext
  slug        String   @unique
  email       String?
  phone       String?
  websiteUrl  String?
  description String?
  updatedAt   DateTime @updatedAt 
  createdAt   DateTime @default(now())

  // Relations
  locations  Location[]
  categories Category[]

  // Indexes
  @@index([name])
}


model Location {
  id          String   @id @default(cuid())
  name        String   @db.Citext
  slug        String   @unique

  // Geographic data
  type        String   @default("country") // "country" | "city"
  country     String?
  countryCode String?
  stateCode   String?

  // Display
  displayName String?
  flag        String?

  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  // Relations
  tools Tool[]
  shops Shop[]

  @@index([name])
  @@index([countryCode])
  @@index([type])
}


model AttributeGroup {
  id          String      @id @default(cuid())
  name        String      @db.Citext
  slug        String      @unique
  description String?
  type        String      @default("multiple") // "single" | "multiple" | "range"
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  attributes Attribute[]

  // Indexes
  @@index([slug])
  @@index([order])
}

model Attribute {
  id        String         @id @default(cuid())
  name      String         @db.Citext
  slug      String         @unique
  value     String?        // For numeric values like "50" for 50 sq ft
  unit      String?        // "sq ft", "sq m", etc.
  order     Int            @default(0)
  groupId   String
  group     AttributeGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  // Relations
  tools    Tool[]
  pricings Pricing[]

  // Indexes
  @@index([groupId])
  @@index([slug])
  @@index([order])
}

model Pricing {
  id          String      @id @default(cuid())
  name        String?     @db.Citext // Optional name like "Small Climate Controlled Unit"
  description String?
  
  // The combination of attributes that defines this price
  attributes  Attribute[]
  
  // Pricing details
  price       Decimal
  currency    String      @default("USD")
  period      String      @default("month") // month, year, day, week, one-time
  unit        String?     // per sq ft, per cubic meter, per unit, etc.
  
  // Metadata
  isActive    Boolean     @default(true)
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  toolId      String
  tool        Tool        @relation(fields: [toolId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([toolId])
  @@index([isActive])
  @@index([order])
}

model Report {
  id        String   @id @default(cuid())
  type      String   @default("Other")
  message   String?
  email     String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tool   Tool?   @relation(fields: [toolId], references: [id], onDelete: Cascade)
  toolId String?

  // Indexes
  @@index([toolId])
}
